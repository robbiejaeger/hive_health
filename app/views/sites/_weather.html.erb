<div class="col-md-offset-1 col-md-10">
  <div class="panel panel-success">
    <div class="panel-heading">
      <h3 class="panel-title">Forecast For <%= site.name %></h3>
    </div>

    <table class="table table-bordered">
      <tr>
        <% weather_days.each do |day| %>
          <th class="col-md-1"><%= day.date_formatted %></th>
        <% end %>
      </tr>

      <tr>
        <% weather_days.each do |day| %>
          <td class="col-md-1">
            Low: <%= day.temperatureMin.round(1) %> F<br>
            High: <%= day.temperatureMax.round(1) %> F<br><br>
            <%= day.summary %></td>
        <% end %>
      </tr>
    </table>
  </div>
</div>
