<div class="col-md-offset-2 col-md-8">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h2 class="panel-title">Submit a New Log for Hive: <%= @hive.name %></h2>
    </div>
    <div class="panel-body">
      <%= form_for [:dashboard, @site, @hive, @log], multipart: true do |f| %>

        <div class="form-group">
          <%= f.label :notes %>
          <%= f.text_area :notes, class: "form-control", rows: 8 %>
        </div>

        <div class="row">
          <div class="form-group col-md-6">
            <%= f.label "Image" %>
            <%= f.file_field :log_img, class: "form-control" %>
          </div>
        </div>

        <%= f.submit "Submit Hive Log", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
